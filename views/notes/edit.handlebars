<a href="/" class="btn btn-primary">Voltar</a>
<h2>Editar Nota: {{note.title}} </h2>
<form action="/notes/update" method="post">
  <input type="hidden" name="id" value="{{note._id}}" />
  <div class="mb-3">
    <label for="title" class="form-label">Título: </label>
    <input
      type="text"
      class="form-control"
      id="title"
      name="title"
      placeholder="Digite o título"
      value="{{note.title}}"
    />
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Descrição: </label>
    <textarea
      class="form-control"
      name="description"
      id="description"
      placeholder="O que você pretende fazer? "
    >{{note.description}}</textarea>
  </div>
  <input type="submit" class="btn btn-primary" value="Editar Nota" />
</form>